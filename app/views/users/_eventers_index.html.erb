<div class="container">

  <!-- Title and Subtitle -->
    <div class="contenant can-grow all-left eventer bottom-border-eventer">
      <%= image_tag "eventer.svg", style: "height: 32px; padding-bottom: 2px" %>
      <h1 class="section-title">find eventers</h1>
    </div>
    <div class="contenant all-left eventer">
      <h4 class="section-substitle">find the eventer that fits your style</h4>
    </div>
    <div class="contenant py-4"></div>
    <div class="input-group md-form form-sm form pl-0"></div>
  <!-- End of Title and Subtitle -->


  <!-- map -->

  <div
    id="map"
    style="width: 100%;
    height: 375px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>


  <!-- filters -->

  <div class="flex-fill py-3" style="width: 100%">
    <%= form_tag(users_path, method: :get) do %>
      <div class="dropdown" style="width: 100%">
        <div class="filter">
          <p>filter by venue</p>
          <%= select_tag "Type_of_venue", options_for_select(User::TYPEOFVENUE, params[:Type_of_venue]), include_blank: true, prompt: "All", class: "input-field-light" %>
        </div>
        <div class="filter">
          <p>filter by crowd</p>
          <%= select_tag "Type_of_crowd", options_for_select(User::TYPEOFCROWD, params[:Type_of_crowd]), include_blank: true,  prompt: "All", class: "input-field-light" %>
        </div>
      </div>
      <%= submit_tag "", id: "search-submit", style: "display: none;" %>
    <% end %>
  </div>

  <!-- eventer cards -->
  <div class="py-3" style="width: 100%">
    <h3 class="section-paragraph eventer" style="font-weight: 700;">listed eventers</h3>
  </div>

  <div class="flex-grow">
    <% @eventers.each do |e| %>
      <div class="mb-3">
        <!-- <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6"> -->
          <%=  link_to user_path(e) do %>
            <div class="card-display" style="background-image: url(https:www.onholdinc.com/mohblog/wp-content/uploads/2018/03/restaurant.jpg); height: 265px;">
              <div class="card-display-footer general">
                <div>
                  <h4 style="text-decoration: none;"><%=e.eventer_name%></h4>
                  <h5><%= e.venue_address %></h5>
                </div>
                <div>
                  <p><%= e.venue_type.capitalize %></p>
                </div>
              </div>
            </div>
          <% end %>
        <!-- </div> -->
      </div>
    <% end %>
  </div>
</div>






