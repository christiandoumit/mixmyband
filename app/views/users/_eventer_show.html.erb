<div class="container">


<!-- eventer infos -->
<div class="row mt-3">
    <div class="eventer-cover-img" style="background-image:linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(https:www.onholdinc.com/mohblog/wp-content/uploads/2018/03/restaurant.jpg)">
      <div>
        <div class="eventer-cover-row">
          <h1><%= @user.eventer_name %></h1>
          <h5><%= @user.venue_address%></h5>
        </div>
        <div class="eventer-cover-row">
          <p><strong><%= @user.venue_type%></strong></p>
          <p><%= @user.crowd_type%></p>
        </div>
        <div class="eventer-cover-row">
          <p><%= @user.description%></p>
        </div>
        <div class="eventer-cover-footer">
          <div>
            <%= link_to "", favorites_path(other_user_id: @user.id), method: :post, class: "fas fa-heart fa-lg" %>
            <a href="#" class="fas fa-share-alt fa-lg" style="color: #83B594"></a> -->
          </div>
          <div>
            <!-- changed the p for a to have the link allowed -->
            <a class="button-submit review" href="#reviews">VIEW REVIEWS</a>
          </div>
        </div>
      </div>
    </div>
  </div>


<!-- buttons BOOK THIS VENUE SEND A MESSAGE -->
<div class="row"><h3><strong>BUTTONS</strong></h3></div>
  <div class="row mt-3">
    <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6">
      <div class="list-group">
        <%#= link_to "BOOK THIS VENUE", new_user_booking_path, { class: "button-plain eventer" } %>
        <%#= link_to "SEND A MESSAGE", _path(e), { class: "button-empty-bordered artist" } %>
      </div>
    </div>
  </div>
</div>

<!-- map -->
<h3 style="font-weight: 700;">find us</h3>
<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<!-- calendar -->
<%#= month_calendar do |date| %>
  <%#= date.day %>
  <%# @bookings.each do |booking| %>
    <div>
      <%#= booking.name %>
    </div>
  <%# end %>
<%# end %>




<!-- reviews -->
<h3 style="font-weight: 700;" id="reviews">reviews</h3>


</div>
