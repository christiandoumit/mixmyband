<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <div class="contenant all-left">
      <img src="<%= @user.images[0].image_src %>" class="artist-profile-img">
    </div>
    <div class="contenant can-grow artist all-right">
      <div style="text-align: right">
        <h1 class="section-title"><%= @user.artist_name.downcase %></h1>
        <h5 class="section-light-text"><%= @user.music_type.downcase %> <strong>|</strong> <%= @user.artist_type.downcase %></h5>
        <% if @user.event_type.present? %>
          <p class="section-paragraph pt-4">available for <strong><%= @user.event_type %></strong>.</p>
        <% else %>
          <p class="section-paragraph pt-4">available for <strong>any event type</strong>.</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-between align-items-center pt-2">
    <div class="contenant artist centered aligned-centered" style="text-align: center; width: 140px ">
      <%= link_to "", favorites_path(other_user_id: @user.id), method: :post, class: "fas fa-heart fa-lg" %>
      <a href="#" class="fas fa-share-alt fa-lg pl-2"></a>
    </div>
    <div class="contenant can-grow artist all-right">
      <h6><strong><%= @user.price %> $CAD / hour</strong></h6>
    </div>
  </div>
  <div class="d-flex justify-content-between align-items-center mt-4">
    <%= link_to new_user_booking_path(params[:id]), { class: "button-plain artist", style: "flex: 0 0 49%" } do %>
      <div>MIX THIS ARTIST</div>
    <% end %>
    <%= link_to "#", { class: "button-empty-bordered artist", style: "flex: 0 0 49%" } do %>
     <div class="pl-1">SEND A MESSAGE</div>
    <% end %>
  </div>
  <div class="contenant bottom-border-artist pt-4"></div>

<!-- Audio Section -->
  <div class="pt-4 pb-3" style="width: 100%">
    <h3 class="section-title artist">Audio</h3>
  </div>
  <!-- Audio Carousel -->
  <% if @user.audio_urls.count > 0 %>
    <div class="audio" style="width: 100%">
      <div id="carousel-audio" class="carousel slide" data-ride="carousel" data-interval="false">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <iframe width="100%" height="300" scrolling="no" frameborder="no" allow="autoplay" src="<%= @user.audio_urls.first.url %>"></iframe>
          </div>
          <% @user.audio_urls[1..-1].each do |audio_url| %>
            <div class="carousel-item">
              <iframe width="100%" height="300" scrolling="no" frameborder="no" allow="autoplay" src="<%= audio_url.url %>"></iframe>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carousel-audio" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-audio" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  <% end %>
<!-- Video Section -->
  <div class="pt-4 pb-3" style="width: 100%">
    <h3 class="section-title artist">Videos</h3>
  </div>
  <!-- Video Carousel -->
  <% if @user.youtube_urls.count > 0 %>
    <div class="video">
      <div id="carousel-video" class="carousel slide" data-ride="carousel" data-interval="false">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <iframe width="100%" height="350" src="<%= @user.youtube_urls.first.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>

          <% @user.youtube_urls[1..-1].each do |youtube_url| %>
            <div class="carousel-item">
              <iframe width="100%" height="350" src="<%= youtube_url.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carousel-video" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-video" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  <% end %>
<!-- Photos Section -->
  <div class="pt-4 pb-3" style="width: 100%">
    <h3 class="section-title artist">Photos</h3>
  </div>
  <!-- Photos Carousel -->
  <div class="photos-container">
    <% if @user.images.count > 0 %>
      <div class="Images">
        <div id="carousel-photo" class="carousel slide" data-ride="carousel" data-interval="false">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="<%= @user.images.first.image_src %>"></img>
            </div>

            <% @user.images[1..-1].each do |image| %>
              <div class="carousel-item">
                <img src="<%= image.image_src %>"></img>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carousel-photo" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carousel-photo" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    <% end %>
  </div>

  <div class="contenant artist centered aligned-centered pt-4">
    <div>
      <h5 class="section-title" style="text-align: center">follow this artist</h5>
      <h5 class="section-title" style="text-align: center">on his social media</h5>
      <div class="artists-sm-links">
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-youtube-square"></i></a>
        <a href="#"><i class="fab fa-soundcloud"></i></a>
      </div>
    </div>
  </div>
</div>
