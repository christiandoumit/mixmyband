<div container>

<h1>Hi, <%= current_user.first_name %></h1>

<!-- avatar -->
<div class="row mt-3">
    <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6">
      <img src="https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/ekipyhjtwrtniwwln3xl.jpg" class="dashboard-avatar">
    </div>
</div>

<!-- edit button -->
<div>
<%= link_to "EDIT YOUR PROFILE", nil, {class: "button-empty-bordered general"} %>
</div>

<!-- booking title 1/2 -->
<h3 style="font-weight: 700;">
<% if current_user.type_of_user == "artist" %>
  <%= "Eventers' " %>
  <% else %>
  <%= "Artists' " %>
<% end %>
requests
</h3>

<!-- booking list RECEIVED-->
<!-- pending received -->
<p style="font-weight: 900;">Pending</p>

<% @pending_received.each do |booking| %>
<div class="row mt-3">
      <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6">
      <div class="card-scroll-container cal-book">
        <div class="card-a-row booking">
          <h5 class="date"><%= booking.booking_date %></h5>
          <h5 class="name"><%= booking.sender.name %></h5>
          <div class="booking-icons">
            <!-- <a href="#" class="booking-icons-item far fa-comments fa-lg" style="color: #1D73A5"></a> -->
            <button type="button" class="btn-invisible booking-icons-item far fa-comments fa-lg" style="color: #1D73A5" data-toggle="modal" data-target="#bookingModal-<%= booking.id %>">

            <!-- <a href="#" class="booking-icons-item fas fa-check-circle fa-lg" style="color: #D3D3D3"></a> -->
            <%= simple_form_for(booking, defaults: { input_html: { class: 'default_class' } } ) do |f|  %>
              <%= f.input :status, as: :hidden, input_html: { value: "Confirmed" } %>
              <button type="submit" class="btn-invisible">
                <i class="booking-icons-item fas fa-check-circle fa-lg" style="color: #D3D3D3"></i>
              </button>
            <% end %>
            <a href="#" class="booking-icons-item far fa-times-circle fa-lg" style="color: #D3D3D3"></a>
            <%= simple_form_for(booking)  do |f|  %>
              <%= f.input :status, as: :hidden, input_html: { value: "Declined" } %>
              <button type="submit" class="btn-invisible">
                <i class="booking-icons-item far fa-times-circle fa-lg" style="color: #D3D3D3"></i>
              </button>
            <% end %>
          </div>
        </div>
      </div>
      </div>
    </div>
<% end %>
 

<!-- confirmed received -->
 <p style="font-weight: 900;">Confirmed</p>

<% @confirmed_received.each do |booking| %>
    <div class="row mt-3">
      <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6">
      <div class="card-scroll-container cal-book">

        <div class="card-a-row booking">
          <h5 class="date"><%= booking.booking_date %></h5>
          <h5 class="name"><%= booking.sender.name %></h5>
          <div class="booking-icons">
            <a href="#" class="booking-icons-item far fa-comments fa-lg" style="color: #1D73A5"></a>
            <a href="#" class="booking-icons-item fas fa-check-circle fa-lg" style="color: #D3D3D3"></a>
            <a href="#" class="booking-icons-item far fa-times-circle fa-lg" style="color: #D3D3D3"></a>
          </div>
        </div>
      </div>
    </div>
  </div>
 <% end %>

 <% @confirmed_received.each do |booking| %>
  <p><%= booking.booking_date %> <%= booking.sender.name %></p>
 <% end %>


<!-- booking title 2/2 -->
<h3 style="font-weight: 700;">My booking requests</h3>

<!-- booking list SENT-->
<!-- pending sent -->
 <p style="font-weight: 900;">Pending sent</p>

<% @pending_sent.each do |booking| %>
    <div class="row mt-3">
      <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6">
      <div class="card-scroll-container cal-book">

        <div class="card-a-row booking">
          <h5 class="date"><%= booking.booking_date %></h5>
          <h5 class="name"><%= booking.receiver.name %></h5>
          <div class="booking-icons">
            <a href="#" class="booking-icons-item far fa-comments fa-lg" style="color: #1D73A5"></a>
            <a href="#" class="booking-icons-item fas fa-check-circle fa-lg" style="color: #D3D3D3"></a>
            <a href="#" class="booking-icons-item far fa-times-circle fa-lg" style="color: #D3D3D3"></a>
          </div>
        </div>
      </div>
    </div>
  </div>
 <% end %>

 <p>Pending sent</p>
<% @pending_sent.each do |booking| %>
  <p><%= booking.booking_date %> <%= booking.receiver.name %></p>
 <% end %>

<!-- confirmed sent -->
 <p style="font-weight: 900;">Confirmed sent</p>

<% @confirmed_sent.each do |booking| %>
    <div class="row mt-3">
      <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6">
      <div class="card-scroll-container cal-book">

        <div class="card-a-row booking">
          <h5 class="date"><%= booking.booking_date %></h5>
          <h5 class="name"><%= booking.receiver.name %></h5>
          <div class="booking-icons">
            <a href="#" class="booking-icons-item far fa-comments fa-lg" style="color: #1D73A5"></a>
            <a href="#" class="booking-icons-item fas fa-check-circle fa-lg" style="color: #D3D3D3"></a>
            <a href="#" class="booking-icons-item far fa-times-circle fa-lg" style="color: #D3D3D3"></a>
          </div>
        </div>
      </div>
    </div>
  </div>
 <% end %>


 <p>Confirmed sent</p>
<% @confirmed_sent.each do |booking| %>
  <p><%= booking.booking_date %> <%= booking.receiver.name %></p>
 <% end %>

</div>
