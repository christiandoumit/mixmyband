<div class="container">
  <!-- Displaying mixmyBand Logo -->
  <div class="contenant general aligned-centered centered">
    <%= image_tag 'mixmyband-land.png', style: "width: 240px" %>
  </div>
  <!-- Displaying the SignUp button -->
  <div class="contenant general aligned-centered centered mt-2">
    <a href="<%= new_user_registration_path %>" class="button-submit signup">SIGN UP</a>
  </div>
  <!-- Displaying the "i am an artist circle" -->
  <div class="contenant general aligned-centered centered">
    <%= link_to users_path do %>
      <div class="user-circle artist">
        <div>
          <div class="user-category">
            <h3 class="artist">i am an</h3>
          </div>
          <div class="user-category">
            <h2 class="artist">artist</h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Displaying the "i am an eventer circle" -->
  <div class="contenant general aligned-centered centered">
    <%= link_to users_path do %>
      <div class="user-circle eventer">
        <div>
          <div class="user-category">
            <h3 class="eventer">i am an</h3>
          </div>
          <div class="user-category">
            <h2 class="eventer">eventer</h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Displaying the "i am a passionate circle" -->
  <div class="contenant general aligned-centered centered">
    <%= link_to users_path do %>
      <div class="user-circle passionate">
        <div>
          <div class="user-category">
            <h3 class="passionate">i am a</h3>
          </div>
          <div class="user-category">
            <h2 class="passionate">passionate</h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
