<div class="container">

  <div class="contenant general all-left aligned-centered pb-2">
    <i class="fas fa-angle-left fa-lg pr-2"></i>
    <h5 class="m-0"><%= link_to "back", :back, style: "align-items: center"%></h5>
  </div>
  <div class="d-flex justify-content-between align-items-start" style="width: 100%">
    <div class="contenant general all-left bottom-border-general can-grow aligned-started">
      <h1>hi, <strong><%= current_user.first_name.capitalize %></strong></h1>
    </div>
    <div class="contenant all-left aligned-started">
      <img src="<%= current_user.avatar %>" alt="" class='dashboard-avatar'>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-start py-3" style="width: 100%">
    <% if current_user.type_of_user == "artist" %>
      <h3 style="color: #1D73A5; font-weight: 700">your favorite eventers</h3>
    <% else %>
      <h3 style="color: #1D73A5; font-weight: 700">your favorite artists</h3>
    <% end %>
  </div>

  <div class="align-items-start py-3" style="width: 100%">
  <% if @favorites.empty? %>
    <h5 style="font-weight: 700; padding-top: 20px">You have no favorites for now.</h5>
    <h5 style="font-weight: 500">Click on <i class="fas fa-heart fa-lg" style="color: #1D73A5"></i> in a show page to bookmark a favorite!</h5>
  <% else %>
    <% @favorites.each do |f| %>
      <div class="card-a-row-fav">
        <i class="fas fa-heart" style="font-size:28px ; color: #1D73A5"></i>
        <div class="its-name">
          <h5 style="font-weight: 700"><%= f.other_user.eventer_name.capitalize %></h5>
        </div>
        <div>
          <%= link_to "", favorite_path(f), method: :delete, class: "fas fa-trash fa-lg", style: "color: #D3D3D3" %>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>









